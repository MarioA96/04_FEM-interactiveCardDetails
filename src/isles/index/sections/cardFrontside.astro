---
import { cva, css } from "../../../../styled-system/css";
import FrontsideDetails from "./components/FrontsideDetails.svelte";

let { cardNumber, holderName, expDate } = Astro.props.frontsideCard;

let frontSideDetails = {
    cardNumber,
    holderName,
    expDate
};

const cardFrontsideBoxStyles = cva({
    base: {
        display: 'flex',
        position: 'absolute',
        zIndex: 2,
        width: {
            xsm: '260px',
            sm: '260px',
            md: '380px'
        },
        height: {
            xsm: '150px',
            sm: '150px',
            md: '180px'
        },
        bottom: {
            xsm: '-10px',
            sm: '-10px',
            md: '450px',
            xl: '475px'
        },
        left: {
            xsm: '20px',
            sm: '20%',
            md: '280px'
        }
    }
});
---

<div id="card_front_box" class={ cardFrontsideBoxStyles({}) }>
    <div id="card_front_container" class={css({ position: 'relative', width: '100%', height: '100%' })}>
        <img 
            src="/04_FEM-interactiveCardDetails/images/bg-card-front.png"
            alt="img_card__backside"
            class={css({ display: 'flex', position: 'absolute', zIndex: 0, top: '0', left: '0' })}
        >
        <div id="card_front_details_box" class={css({ display: 'flex', position: 'absolute', zIndex: 1, top: '10px', left: '10px', width: '90%', height: '78%' })}>
        
            <FrontsideDetails 
                cardDetails={frontSideDetails} 
                client:load
            />
        
        </div>
    </div>
</div>