---
import IndexLayout from '../layouts/index/index.layout.astro'

import CardSectionBox from '../isles/index/cardSection.astro';
import CardFormBox from '../isles/index/cardFormBox.astro';
import Footer from '../isles/index/footer.astro';

import type { CardContent } from '../interfaces/CardContent';

let initialStateContent : CardContent = {
    backgrounds: {
        background_1040: '/04_FEM-interactiveCardDetails/images/bg-main-desktop.png',
        background_640: '/04_FEM-interactiveCardDetails/images/bg-main-desktop.png',
        background_340: '/04_FEM-interactiveCardDetails/images/bg-main-mobile.png',
        background_regular: '/04_FEM-interactiveCardDetails/images/bg-main-mobile.png'
    },
    backsideCard: {
        media: '/04_FEM-interactiveCardDetails/images/bg-card-back.png',
        cvc: '000'
    },
    frontsideCard: {
        cardNumber: '0000 0000 0000 0000',
        holderName: 'JANE APPLESEED',
        expDate: {
            month: '00',
            year: '00'
        }
    }
}
---

<IndexLayout>

	<CardSectionBox initialState={initialStateContent}/>

	<CardFormBox initialState={initialStateContent}/>

    <Footer />    

</IndexLayout>
